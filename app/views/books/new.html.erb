<table>
	<thead>
	  <tr>
        <th>Title</th>
        <th>Body</th>
     </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <% if book.errors.any? %>
      <% end %>
      <tr>
        <td class="title"><%= book.title %></td>
        <td class="body"><%= book.body %></td>
        <td>

          <%= link_to"Show", book_path(book.id) %>
          <%= link_to"Edit", edit_book_path(book.id) %>
          <%= link_to"Destroy", book_path(book.id), method: :delete, "data-confirm" =>"Are you sure?" %>
        </td>
      </tr>
      <% end %>
    </tbody>
</table> 
<h2>New Books</h2>
<%= form_for(@book) do |f| %>
    <div class="field">
      <label>Title</label><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
    <label>Body</label><br>
      <%= f.text_area :body %>
    </div>
    <div class="action"><%= f.submit 'Create Book' %></div>

<% end %>